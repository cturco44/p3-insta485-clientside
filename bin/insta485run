#!/bin/bash

# Stop on errors
set -Eeuo pipefail
# Prints commands
set -x

if ! psql -lqt | grep -q insta485; then
    ./bin/insta485db create
    export FLASK_ENV=development
    export FLASK_APP=insta485
    flask run --host 0.0.0.0 --port 8000
else
    ./bin/insta485db reset
    export FLASK_ENV=development
    export FLASK_APP=insta485
    flask run --host 0.0.0.0 --port 8000
fi

